  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.img_card {
  align-content: center;
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
}

.news {
  margin-top: 20rpx;
  margin-left: 2.5%;
  margin-right: 2.5%;
  width: 95%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
